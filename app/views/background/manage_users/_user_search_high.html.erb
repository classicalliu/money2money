              </div> <!-- form group [rows] -->
              <div class="form-group">
                <label class="filter-col" style="margin-right:0;" for="pref-orderby">注册时间</label>
                <%= f.select :search_time, %w(不限 一周内 两周内 一个月内 三个月内), {}, {class: 'form-control'} %>
                <!--<select id="pref-orderby" class="form-control">-->
                <!--<option selected="selected">一周内</option>-->
                <!--<option>两周内</option>-->
                <!--<option value="">一个月内</option>-->
                <!--</select>-->
              </div> <!-- form group [order by] -->
              <div class="form-group">
                <label class="filter-col" style="margin-right:0;" for="pref-search">搜索:</label>
                <%= f.text_field :search_text, class: 'form-control input-sm' %>
                <!--<input type="text" class="form-control input-sm" id="pref-search">-->
              </div><!-- form group [search] -->

              <div class="form-group">
