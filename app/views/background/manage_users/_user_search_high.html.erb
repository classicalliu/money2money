<div class="container">
  <div class="row">
    <div id="filter-panel" class="collapse filter-panel">
      <div class="panel panel-default">
        <div class="panel-body">
          <!--<form class="form-inline" role="form">-->
          <%= form_for [:background, :manage, User.new], url: background_high_search_user_path, method: :post, html: {class: 'form-inline'} do |f| %>
              <div class="form-group">
                <label class="filter-col" style="margin-right:0;" for="pref-perpage">性别</label>
                <%= f.select :search_sex, %w(不限 男 女), {}, {class: 'form-control'} %>
                <!--<select id="pref-perpage" class="form-control">-->
                <!--<option selected="selected" value="不限">不限</option>-->
                <!--<option value="男">男</option>-->
                <!--<option value="女">女</option>-->
