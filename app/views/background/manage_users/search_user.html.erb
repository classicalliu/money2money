<%= render 'user_search' %>
<%= render 'user_search_high' %>

<% @search.results.each do |user| %>
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <ul class="timeline">

          <!-- timeline time label -->
          <li class="time-label">
            <span class="bg-red">
              <% time = user.created_at %>
              <%= "#{time.year}年 #{time.month}月 #{time.day}日" %>
            </span>
          </li>
          <!-- /.timeline-label -->

          <!-- timeline item -->
          <li>
            <!-- timeline icon -->
            <i class="fa fa-user bg-blue"></i>
            <div class="timeline-item">
              <span class="time"><i class="fa fa-clock-o"></i> <%= "#{time.hour}:#{time.min}" %></span>

              <h3 class="timeline-header"><a href="#">账户邮箱 </a> <%= user.email %></h3>

              <div class="timeline-body">
                <div class="row">
                  <div class="col-md-4">
                    <%= image_tag user.avatar.url(:medium), class: 'head-image' %>
                  </div>
                  <div class="col-md-7">
                    <div class="box box-success box-solid loan-index-box-height">
                      <div class="box-header with-border">
                        <h3 class="box-title">个人信息</h3>

                        <!--<div class="box-tools pull-right">-->
                        <!--<button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>-->
                        <!--</div>-->
                        <!-- /.box-tools -->
                      </div>
                      <!-- /.box-header -->
                      <div class="box-body">
                        姓名: <%= user.name %><br>
                        性别: <%= user.sex %><br>
                        联系电话: <%= user.phone_number %><br>
                        身份证号码: <%= user.id_card %><br>
                        家庭住址: <%= user.address %>
                      </div>
                      <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                  </div>
                  <div class="col-md-1"></div>
                </div>
              </div>

              <div class="timeline-footer">
                <!--<a class="btn btn-primary btn-xs">查看详情</a>-->
                <%= link_to '查看详情', background_manage_user_path(user), class: 'btn btn-primary btn-xs' %>
              </div>
            </div>
          </li>
          <!-- END timeline item -->
        </ul>
      </div>
    </div>
<% end %>

