<%= render 'investment_search_high' %>
<br><br>

<% @search.results.each do |investment| %>
    <div class="row">
      <div class="col-md-12">
        <ul class="timeline">

          <!-- timeline time label -->
          <li class="time-label">
            <span class="bg-red">
              <% time = investment.created_at %>
              <%= "#{time.year}年 #{time.month}月 #{time.day}日" %>
            </span>
          </li>
          <!-- /.timeline-label -->

          <!-- timeline item -->
          <li>
            <!-- timeline icon -->
            <i class="fa fa-user bg-blue"></i>
            <div class="timeline-item">
              <span class="time"><i class="fa fa-clock-o"></i> <%= "#{time.hour}:#{time.min}" %></span>

              <h3 class="timeline-header"><a href="#">投资金额 </a> <%= investment.mount %></h3>

              <div class="timeline-body">
                <div class="row">
                  <div class="col-md-3">
                    <%= image_tag investment.users.first.avatar.url(:medium), class: 'head-image' %>
                  </div>
                  <div class="col-md-3">
                    <div class="box box-success box-solid loan-index-box-height">
                      <div class="box-header with-border">
                        <h3 class="box-title">投资人信息</h3>

                        <!--<div class="box-tools pull-right">-->
                        <!--<button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>-->
                        <!--</div>-->
                        <!-- /.box-tools -->
                      </div>
                      <!-- /.box-header -->
                      <div class="box-body">
                        email: <%= investment.users.first.email %><br>
                        姓名: <%= investment.users.first.name %><br>
                        性别: <%= investment.users.first.sex %><br>
                        联系电话: <%= investment.users.first.phone_number %>
                      </div>
                      <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                  </div>
                  <div class="col-md-3">
                    <div class="box box-warning box-solid loan-index-box-height">
                      <div class="box-header with-border">
                        <h3 class="box-title">投资项目信息</h3>

                        <!--<div class="box-tools pull-right">-->
                        <!--<button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>-->
                        <!--</button>-->
                        <!--</div>-->
                        <!-- /.box-tools -->
                      </div>
                      <!-- /.box-header -->
                      <div class="box-body">
                        申请金额: <%= investment.loan.mount %><br>
                        用途: <%= investment.loan.use %><br>
                        还款方式: <%= investment.loan.way %><br>
                        还款周期: <%= investment.loan.period %>
                      </div>
                      <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                  </div>
                  <div class="col-md-3">
                    <div class="box box-danger box-solid loan-index-box-height">
                      <div class="box-header with-border">
                        <h3 class="box-title">被投资人信息</h3>

                        <!--<div class="box-tools pull-right">-->
                        <!--<button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>-->
                        <!--</button>-->
                        <!--</div>-->
                        <!-- /.box-tools -->
                      </div>
                      <!-- /.box-header -->
                      <div class="box-body">
                        email: <%= investment.loan.user.email %><br>
                        姓名: <%= investment.loan.user.name %><br>
                        电话: <%= investment.loan.user.phone_number %>
                      </div>
                      <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                  </div>
                </div>
              </div>

              <div class="timeline-footer">
                <!--<a class="btn btn-primary btn-xs">查看详情</a>-->
                <%= link_to '查看详情', background_manage_loan_path(investment), class: 'btn btn-primary btn-xs' %>
              </div>
            </div>
          </li>
          <!-- END timeline item -->
        </ul>
      </div>
    </div>
<% end %>

<div class="paginate">
  <%= will_paginate @search.hits, :params => { :investment => {:search_text => params[:investment][:search_text], :search_mount => params[:investment][:search_mount]} } %>
</div>