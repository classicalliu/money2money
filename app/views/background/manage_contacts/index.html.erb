<% @contacts.each do |contact| %>
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <ul class="timeline">

          <!-- timeline time label -->
          <li class="time-label">
            <span class="bg-red">
              <% time = contact.created_at %>
              <%= "#{time.year}年 #{time.month}月 #{time.day}日" %>
            </span>
          </li>
          <!-- /.timeline-label -->

          <!-- timeline item -->
          <li>
            <!-- timeline icon -->
            <i class="fa fa-envelope bg-yellow"></i>
            <div class="timeline-item">
              <span class="time"><i class="fa fa-clock-o"></i> <%= "#{time.hour}:#{time.min}" %></span>

              <h3 class="timeline-header"><a href="#">主题 </a> <%= contact.title %></h3>

              <div class="timeline-body">
                <div class="row">
                  <div class="col-md-4">
                    <div class="box box-info box-solid loan-index-box-height">
                      <div class="box-header with-border">
                        <h3 class="box-title">用户信息</h3>

                      </div>
                      <!-- /.box-header -->
                      <div class="box-body">
                        email: <%= mail_to "#{contact.email}" %><br>
                        姓名: <%= contact.name %><br>
                      </div>
                      <!-- /.box-body -->
                    </div>
                  </div>
                  <div class="col-md-8">
                    <div class="box box-success box-solid loan-index-box-height">
                      <div class="box-header with-border">
                        <h3 class="box-title">反馈信息</h3>

                        <!--<div class="box-tools pull-right">-->
                        <!--<button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>-->
                        <!--</div>-->
                        <!-- /.box-tools -->
                      </div>
                      <!-- /.box-header -->
                      <div class="box-body">
                        <p><%= contact.message %></p>
                      </div>
                      <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                  </div>
                  <div class="col-md-1"></div>
                </div>
              </div>

              <div class="timeline-footer">
                <!--<a class="btn btn-primary btn-xs">查看详情</a>-->
              </div>
            </div>
          </li>
          <!-- END timeline item -->
        </ul>
      </div>
    </div>
<% end %>

