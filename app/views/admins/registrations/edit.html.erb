<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put, multipart: true}) do |f| %>
        <%= devise_error_messages! %>
        <div class="box box-info">
          <div class="box-header with-border">
            <h3 class="box-title">修改管理员资料</h3>
          </div>
          <div class="box-body">
            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
              <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email', disabled: 'disabled' %>
            </div>
            <br>

            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-key"></i></span>
              <%= f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder: '新密码' %>
            </div>
            <br>

            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-key"></i></span>
              <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control', placeholder: '确认密码' %>
            </div>
            <br>

            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-user"></i></span>
              <%= f.text_field :name, autocomplete: 'off', class: 'form-control', placeholder: '姓名' %>
            </div>
            <br>

            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-mobile-phone"></i></span>
              <%= f.phone_field :phone_number, autocomplete: 'off', class: 'form-control', placeholder: '联系电话' %>
            </div>
            <br>

            <div class="row">
              <div class="col-md-6 col-lg-6">
                <div class="input-group">
                        <span class="input-group-addon">
                          <%= f.radio_button :sex, '男', checked: true %>
                        </span>
                  <%= f.label :sex_male, '男', class: 'form-control' %>
                </div>
              </div>
              <div class="col-md-6 col-lg-6">
                <div class="input-group">
                        <span class="input-group-addon">
                          <%= f.radio_button :sex, '女' %>
                        </span>
                  <%= f.label :sex_female, '女', class: 'form-control' %>
                </div>
              </div>
            </div>
            <br>

            <div class="input-group">
              <span class="input-group-btn">
                <span type="button" class="btn btn-danger btn-file">上传头像<%= f.file_field :avatar %></span>
              </span>
              <input type="text" class="form-control" readonly/>
            </div>
            <br>

            <div class="input-group input-group-sm">
              <span class="input-group-addon"><i class="fa fa-key"></i></span>
              <%= f.password_field :current_password, autocomplete: 'off', class: 'form-control', placeholder: '当前密码' %>
              <span class="input-group-btn">
                <%= f.submit '提交', class: 'btn btn-info btn-flat' %>
                    </span>
            </div>
            <br>
          </div>
        </div>
    <% end %>
    <div class="input-group input-group-sm">
      <span class="input-group-btn">
        <%= button_to '注销账户', registration_path(resource_name), data: {confirm: '确认注销?'}, method: :delete, class: 'btn btn-danger btn-flat pull-right' %>
              </span>
    </div>
    <br>
  </div>
</div>